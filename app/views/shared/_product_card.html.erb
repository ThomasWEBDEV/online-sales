<div class="card-product <%= 'sold' if product.sold %>">
  <%= link_to product, data: { turbo: false } do %>
    <!-- Image -->
    <% if product.photos.attached? %>
      <div class="card-product-image">
        <%= cl_image_tag product.photos.first.key, height: 300, width: 400, crop: :fill, quality: :auto %>
      </div>
    <% else %>
      <div class="placeholder-image">
        <i class="fas fa-image"></i>
        <p>Aucune photo</p>
      </div>
    <% end %>

    <!-- Badge NOUVEAU uniquement (pas VENDU) -->
    <% if !product.sold && product.created_at > 7.days.ago %>
      <span class="badge bg-success">Nouveau</span>
    <% end %>

    <!-- Infos produit -->
    <div class="card-product-infos">
      <h2 class="text-decoration-none"><%= product.name %></h2>
      <p><%= truncate(product.description, length: 80) %></p>
      <div class="card-product-footer">
        <div class="card-product-pricing">
          <%= number_to_currency(product.price, unit: '', separator: ',', delimiter: ' ', format: '%n', precision: 0) %>
          <span class="currency">â‚¬</span>
        </div>
        <% if product.views_count > 0 %>
          <div class="card-product-meta">
            <i class="fas fa-eye"></i>
            <%= product.views_count %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Bouton favori (en dehors du lien) -->
  <% if user_signed_in? %>
    <%= favorite_button(product) %>
  <% end %>
</div>
