<!-- Hero Section pour la page d'accueil -->
<div class="hero-banner">
  <div class="hero-content">
    <div class="hero-badge">
      <i class="fas fa-star me-2"></i>Plateforme #1 en France
    </div>
    <h1 class="hero-title">
      Votre marketplace de confiance
    </h1>
    <p class="hero-subtitle">
      Découvrez des milliers de produits ou vendez les vôtres en quelques clics.
      <br>Simple, sécurisé, sans commission cachée.
    </p>
    <div class="hero-actions">
      <%= link_to "Découvrir les produits", products_path, class: "btn btn-hero-primary" %>
      <% if user_signed_in? %>
        <%= link_to "Commencer à vendre", new_product_path, class: "btn btn-hero-secondary" %>
      <% else %>
        <%= link_to "Rejoindre la communauté", new_user_registration_path, class: "btn btn-hero-secondary" %>
      <% end %>
    </div>
    <div class="hero-stats">
      <div class="stat">
        <strong><%= Product.count %></strong>
        <span>Produits</span>
      </div>
      <div class="stat">
        <strong><%= User.count %></strong>
        <span>Vendeurs</span>
      </div>
      <div class="stat">
        <strong>4.8/5</strong>
        <span>Satisfaction</span>
      </div>
    </div>
  </div>
</div>

<!-- Section produits populaires -->
<div class="container my-5">
  <div class="text-center mb-4">
    <h2>Produits populaires</h2>
    <p class="text-muted">Découvrez nos meilleures ventes</p>
  </div>

  <div class="cards">
    <% Product.order(views_count: :desc).limit(6).each do |product| %>
      <div class="card-product">
        <% if product.photo.attached? %>
          <%= cl_image_tag product.photo.key, height: 150, width: 150, crop: :fill %>
        <% else %>
          <%= image_tag "https://picsum.photos/seed/#{product.id}/150/150" %>
        <% end %>
        <div class="card-product-infos">
          <h2><%= link_to product.name, product, class: "text-decoration-none" %></h2>
          <p><%= truncate(product.description, length: 80) %></p>
          <div class="card-product-pricing"><%= product.price %>€</div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Voir tous les produits", products_path, class: "btn btn-flat" %>
  </div>
</div>
