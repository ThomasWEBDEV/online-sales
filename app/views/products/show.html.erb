<div class="row">
  <div class="col-md-8">
    <% if @product.photo.attached? %>
      <%= cl_image_tag @product.photo.key, height: 400, width: 600, crop: :fill, class: "w-100 mb-3" %>
    <% else %>
      <%= image_tag "https://picsum.photos/seed/#{@product.id}/600/400", class: "w-100 mb-3" %>
    <% end %>
  </div>

  <div class="col-md-4">
    <h1><%= @product.name %></h1>
    <h2 class="text-primary"><%= @product.price %>€</h2>
    <p class="mt-3"><%= @product.description %></p>

    <div class="mt-4">
      <p class="text-muted">Vendu par : <%= @product.user.email %></p>
    </div>

<% if policy(@product).edit? %>
      <div class="mt-4">
        <%= link_to "Modifier", edit_product_path(@product), class: "btn btn-ghost" %>
        <% if policy(@product).destroy? %>
          <%= button_to "Supprimer", @product, method: :delete, data: { turbo_confirm: "Êtes-vous sûr ?" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% elsif user_signed_in? %>
      <button class="btn btn-flat w-100 mt-4">Contacter le vendeur</button>
    <% else %>
      <%= link_to "Se connecter pour acheter", new_user_session_path, class: "btn btn-flat w-100 mt-4" %>
    <% end %>
  </div>
</div>

<%= link_to "← Retour aux produits", products_path, class: "btn btn-secondary mt-4" %>
