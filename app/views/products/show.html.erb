<%= breadcrumbs ["Produits", products_path], [@product.name, nil] %>

<div class="row">
  <div class="col-md-8">
    <% if @product.photo.attached? %>
      <%= cl_image_tag @product.photo.key, height: 400, width: 600, crop: :fill, class: "w-100 mb-3" %>
    <% else %>
      <%= image_tag "https://picsum.photos/seed/#{@product.id}/600/400", class: "w-100 mb-3" %>
    <% end %>
  </div>

  <div class="col-md-4">
    <h1><%= @product.name %></h1>
    <h2 class="text-primary"><%= @product.price %>€</h2>
    <p class="text-muted"><i class="fas fa-eye"></i> <%= @product.views_count %> vues</p>
    <p class="mt-3"><%= @product.description %></p>

    <!-- Carte vendeur améliorée -->
    <div class="card mt-4 mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3">
          <i class="fas fa-user-circle"></i> Informations vendeur
        </h5>
        <div class="d-flex align-items-center mb-3">
          <i class="fas fa-user-circle fa-3x text-primary me-3"></i>
          <div>
            <strong><%= @product.user.email.split('@').first.capitalize %></strong>
            <% if @product.user.updated_at > 24.hours.ago %>
              <span class="badge bg-success d-block mt-1">
                <i class="fas fa-circle" style="font-size: 8px;"></i> En ligne récemment
              </span>
            <% elsif @product.user.updated_at > 7.days.ago %>
              <span class="badge bg-warning d-block mt-1">
                <i class="fas fa-circle" style="font-size: 8px;"></i> Actif cette semaine
              </span>
            <% end %>
          </div>
        </div>
        <p class="text-muted small mb-2">
          <i class="fas fa-calendar-alt"></i>
          Membre depuis <%= @product.user.created_at.strftime("%B %Y") %>
        </p>
        <p class="text-muted small mb-3">
          <i class="fas fa-box"></i>
          <%= @product.user.products.count %> produit<%= 's' if @product.user.products.count > 1 %> en vente
        </p>
        <%= link_to user_path(@product.user), class: "btn btn-outline-primary btn-sm w-100" do %>
          <i class="fas fa-store"></i> Voir tous ses produits
        <% end %>
      </div>
    </div>

    <% if @product.sold %>
      <div class="alert alert-warning mt-3">
        <strong>📦 PRODUIT VENDU</strong>
      </div>
    <% end %>

    <% if policy(@product).edit? %>
      <div class="mt-4">
        <%= link_to "Modifier", edit_product_path(@product), class: "btn btn-ghost" %>
        <% if policy(@product).destroy? %>
          <%= button_to "Supprimer", @product, method: :delete, data: { turbo_confirm: "Êtes-vous sûr ?" }, class: "btn btn-danger" %>
        <% end %>
        <% if !@product.sold %>
          <%= button_to "Marquer comme vendu", @product,
                        method: :patch,
                        params: { product: { sold: true } },
                        class: "btn btn-success mt-2" %>
        <% end %>
      </div>
    <% elsif user_signed_in? && !@product.sold %>
      <button class="btn btn-flat w-100 mt-4">Contacter le vendeur</button>
    <% elsif user_signed_in? && @product.sold %>
      <p class="text-muted mt-4">Ce produit n'est plus disponible</p>
    <% else %>
      <%= link_to "Se connecter pour acheter", new_user_session_path, class: "btn btn-flat w-100 mt-4" %>
    <% end %>
  </div>
</div>

<!-- Section Produits Similaires -->
<% if @similar_products.any? %>
  <div class="similar-products-section mt-5">
    <div class="section-header">
      <h3><i class="fas fa-lightbulb"></i> Produits similaires qui pourraient vous intéresser</h3>
      <p class="text-muted">Découvrez d'autres produits du même vendeur ou dans la même gamme de prix</p>
    </div>

    <div class="cards mt-4">
      <% @similar_products.each do |product| %>
        <div class="card-product">
          <% if product.photo.attached? %>
            <%= cl_image_tag product.photo.key, height: 150, width: 200, crop: :fill %>
          <% else %>
            <%= image_tag "https://picsum.photos/seed/#{product.id}/200/150" %>
          <% end %>

          <% if user_signed_in? %>
            <%= favorite_button(product) %>
          <% end %>

          <% if product.created_at > 7.days.ago %>
            <span class="badge bg-success">Nouveau</span>
          <% end %>

          <% if product.user_id == @product.user_id %>
            <span class="badge bg-info" style="position: absolute; top: 50px; right: 8px;">
              <i class="fas fa-user"></i> Même vendeur
            </span>
          <% end %>

          <div class="card-product-infos">
            <h2><%= link_to product.name, product, class: "text-decoration-none" %></h2>
            <p><%= truncate(product.description, length: 80) %></p>
            <p class="text-primary fw-bold"><%= product.price %>€</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to "← Retour aux produits", products_path, class: "btn btn-secondary mt-4" %>
