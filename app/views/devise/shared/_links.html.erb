<!-- app/views/devise/shared/_links.html.erb -->
<div class="auth-shared-links">
  <%- if controller_name != 'sessions' %>
    <div class="link-item">
      <span class="link-text">Déjà inscrit ?</span>
      <%= link_to "Se connecter", new_session_path(resource_name), class: 'link-action' %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="link-item">
      <span class="link-text">Pas encore de compte ?</span>
      <%= link_to "S'inscrire", new_registration_path(resource_name), class: 'link-action' %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="link-item">
      <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: 'link-forgot' %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="link-item">
      <%= link_to "Vous n'avez pas reçu d'email de confirmation ?", new_confirmation_path(resource_name), class: 'link-action' %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="link-item">
      <%= link_to "Vous n'avez pas reçu d'email de déblocage ?", new_unlock_path(resource_name), class: 'link-action' %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="link-item">
        <%= button_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn-oauth' %>
      </div>
    <% end %>
  <% end %>
</div>
