<!-- app/views/devise/registrations/edit.html.erb -->
<div class="auth-container">
  <div class="auth-card auth-card-large">
    <!-- Header -->
    <div class="auth-header">
      <div class="auth-icon">
        <i class="fas fa-user-edit"></i>
      </div>
      <h2>Modifier mon profil</h2>
      <p>Gérez vos informations personnelles</p>
    </div>

    <!-- Formulaire -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'auth-form' }) do |f| %>

      <!-- Messages d'erreur -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div class="form-group">
        <%= f.label :email, class: 'form-label' %>
        <div class="input-icon-wrapper">
          <i class="fas fa-envelope input-icon"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control-auth' %>
        </div>
      </div>

      <!-- Nouveau mot de passe (optionnel) -->
      <div class="form-group">
        <%= f.label :password, "Nouveau mot de passe", class: 'form-label' %>
        <span class="password-hint">(laissez vide si vous ne voulez pas le changer)</span>
        <div class="input-icon-wrapper">
          <i class="fas fa-key input-icon"></i>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control-auth', placeholder: '••••••••' %>
        </div>
        <% if @minimum_password_length %>
          <small class="form-text"><%= @minimum_password_length %> caractères minimum</small>
        <% end %>
      </div>

      <!-- Confirmation nouveau mot de passe -->
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", class: 'form-label' %>
        <div class="input-icon-wrapper">
          <i class="fas fa-check-circle input-icon"></i>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control-auth', placeholder: '••••••••' %>
        </div>
      </div>

      <!-- Mot de passe actuel (requis) -->
      <div class="form-group">
        <%= f.label :current_password, "Mot de passe actuel", class: 'form-label' %>
        <span class="password-hint">(requis pour confirmer les modifications)</span>
        <div class="input-icon-wrapper">
          <i class="fas fa-lock input-icon"></i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control-auth', placeholder: '••••••••' %>
        </div>
      </div>

      <!-- Boutons actions -->
      <div class="form-actions-group">
        <%= f.submit "Mettre à jour", class: 'btn-auth-primary' %>
        <%= link_to "Retour", :back, class: 'btn-auth-secondary' %>
      </div>
    <% end %>

    <!-- Suppression du compte -->
    <div class="danger-zone">
      <h3 class="danger-title">
        <i class="fas fa-exclamation-triangle"></i>
        Zone dangereuse
      </h3>
      <p class="danger-text">Supprimer votre compte est irréversible.</p>
      <%= button_to "Supprimer mon compte", registration_path(resource_name),
          data: { confirm: "Êtes-vous sûr ? Cette action est irréversible !", turbo_confirm: "Êtes-vous vraiment sûr de vouloir supprimer votre compte ?" },
          method: :delete,
          class: 'btn-danger-delete' %>
    </div>
  </div>

  <!-- Décoration visuelle -->
  <div class="auth-decoration">
    <div class="decoration-circle circle-1"></div>
    <div class="decoration-circle circle-2"></div>
    <div class="decoration-circle circle-3"></div>
  </div>
</div>
