<div class="container my-5">
  <h1><i class="fas fa-shopping-bag"></i> Mes Achats</h1>

  <!-- Statistiques -->
  <div class="row mt-4 mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-primary"><%= @stats[:total_purchases] %></h3>
          <p class="text-muted mb-0">Achats totaux</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-success"><%= format_price(@stats[:total_spent]) %></h3>
          <p class="text-muted mb-0">Montant total</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-warning"><%= @stats[:pending_delivery] %></h3>
          <p class="text-muted mb-0">En cours</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-info"><%= @stats[:completed] %></h3>
          <p class="text-muted mb-0">Livrés</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Liste des commandes -->
  <% if @orders.any? %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>N° Commande</th>
            <th>Produit</th>
            <th>Vendeur</th>
            <th>Montant</th>
            <th>Statut</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><strong>#<%= order.id %></strong></td>
              <td>
                <%= link_to order.product.name, order.product, class: "text-decoration-none" %>
              </td>
              <td><%= order.seller.email.split('@').first %></td>
              <td><strong><%= format_price(order.total_amount) %></strong></td>
              <td><%= order_status_badge(order) %></td>
              <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
              <td>
                <%= link_to "Détails", order_path(order), class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
      <h3>Aucun achat pour le moment</h3>
      <p class="text-muted">Commencez à explorer nos produits !</p>
      <%= link_to "Voir les produits", root_path, class: "btn btn-flat mt-3" %>
    </div>
  <% end %>
</div>
